<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spalsh_screen_wall"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >
        <RelativeLayout
            android:id="@+id/toiBtn"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_margin="4dp"
            android:layout_height="match_parent"
            android:background="@color/bg_screen4_translucent">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageView22"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/toi_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TIMES OF INDIA"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:id="@+id/textView22"
                android:layout_below="@+id/imageView22"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="29dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hinduBtn"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@color/dot_dark_screen1_translucent">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageView4"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/hindu_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="THE HINDU"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:id="@+id/textView4"
                android:layout_below="@+id/imageView4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="29dp" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >
        <RelativeLayout
            android:id="@+id/indianExpress"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="#75FF9800">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageView5"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/indian_express_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="INDIAN EXPRESS"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:id="@+id/textView5"
                android:layout_below="@+id/imageView5"
                android:layout_marginTop="29dp"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/firstPost"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:background="#75009688">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageView33"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/firstpost_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="FIRST POST"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:id="@+id/textView222"
                android:layout_marginTop="29dp"
                android:layout_below="@+id/imageView33"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_margin="4dp"
            android:layout_height="match_parent"
            android:background="#75F44336">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_newspaper_white_36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TIMES OF INDIA"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:id="@+id/textView"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="#75795548">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_newspaper_white_36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TIMES OF INDIA"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:id="@+id/textView2"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </LinearLayout>

